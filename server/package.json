{
  "name": "easybid",
  "version": "1.0.0",
  "build": {
    "appId": "com.kuzim.easybid",
    "productName": "EasyBid",
    "mac": {
      "icon": "public/easybid.icon.icns"
    },
    "win": {
      "icon": "public/easybid.icon.ico"
    },
    "directories": {
      "output": "../../app/"
    },
    "files": [
      "dist/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://s3.ap-northeast-2.amazonaws.com/easybid.update/"
      }
    ]
  },
  "description": "EasyBid is a tool for bidding on YouTube auctions",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node ../build/app.js",
    "dev": "node_modules/.bin/webpack --watch & nodemon ./dist/bundle.js",
    "build": "webpack",
    "electron_test": "electron dist/index.js",
    "build:electron_test": "npm run build && npm run electron_test",
    "dist": "electron-builder --publish=never",
    "build:dist": " cd ../React && npm run react:build && cd ../server && npm run build && npm run dist",
    "export_mac": "electron-packager dist EasyBid --platform=darwin --arch=x64 --icon=./public/easybid.icon.icns --out=../../app/mac --overwrite",
    "export_window": "electron-packager dist EasyBid --platform=win32 --arch=x64 --icon=./public/easybid.icon.png --out=../../app/window --overwrite"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/electron": "^1.6.10",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.2",
    "@types/retry": "^0.12.2",
    "assert": "^2.0.0",
    "axios": "^1.5.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "constants-browserify": "^1.0.0",
    "cors": "^2.8.5",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.1.1",
    "express": "^4.18.2",
    "firebase": "^10.3.1",
    "https-browserify": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^2.0.22",
    "os-browserify": "^0.3.0",
    "puppeteer": "^20.8.2",
    "puppeteer-in-electron": "^3.0.5",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "ts-node": "^10.9.1",
    "url": "^0.11.1",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2",
    "css-loader": "^6.8.1",
    "electron": "^25.2.0",
    "electron-builder": "^24.6.3",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "path-browserify": "^1.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^4.9.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
